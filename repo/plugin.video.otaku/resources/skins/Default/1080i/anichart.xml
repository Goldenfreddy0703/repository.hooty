        <!-- otaku Logo -->
        <control type="image" id="1001">
            <top>-990</top>
            <left>913</left>
            <width>75</width>
            <aspectratio>keep</aspectratio>
            <texture>$INFO[Window().Property(otaku.logo)]</texture>
        </control>

